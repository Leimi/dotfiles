#!/bin/sh

wanted="${1}"

if [[ $wanted == "current" ]]; then
	LC_ALL=C pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,'
fi

if [[ $wanted == "muted" ]]; then
	muted=$(LC_ALL=C pactl list sinks | awk '/Mute/ { print $2 }')
	if [[ $muted == "yes" ]]; then
		echo "Sourdine"
	else
		echo "Son activ√©"
	fi
fi
