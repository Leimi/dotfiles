#!/bin/zsh

# git enhanced graph log
alias glo="git log --graph --pretty=format:'%C(bold red)%h%Creset%C(yellow)%d%Creset %s %Cgreen%cr %C(cyan)%an%Creset' --abbrev-commit --date=relative"

# gimme file with ack!
alias gmf="ack --ignore-case"

# gimme file with ag!
alias gm="ag --color-line-number=\"0;33\" --color-match=\"0;32\" --color-path=\"0;91\""
alias gmt="gm -G .twig$" # twig file
alias gms="gm -G \"\.scss$\"" #sass file
alias gmv="gm -G \"\.csv$\"" #csv file
alias gmj="gm -G \"\.js$\"" #js file
alias gmc="gm -G \"\.(less|scss)$\"" #css file
alias gmf="gm -G \"\.(less|scss|twig|js)$\"" #front-end file
alias gmp="gm -G .php$" #php file

alias dockerps="docker ps --format \"table {{.ID}}\t{{.Names}}\t{{.Status}}\""

gpo() {
	current_branch=$(git rev-parse --abbrev-ref HEAD)
	git push -u origin $current_branch
}

gcob() {
	git checkout -b $1 origin/$1
}

#redshift for when geolocation doesn't work
alias redshift-angers="redshift -l 47.47:0.55"

switch_file() {
	first_file=$1
	second_file=$2
	mv $first_file $first_file.$$
	mv $second_file $first_file
	mv $first_file.$$ $second_file
}

extract() {
	if [ -z "$1" ]; then
		echo "\`extract\` lets you easily extract common archive types"
		echo "Usage: extract archive_file";
		return 1
	fi
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xjf $1     ;;
			*.tar.gz)    tar xzf $1     ;;
			*.bz2)       bunzip2 $1     ;;
			*.rar)       unrar e $1     ;;
			*.gz)        gunzip $1      ;;
			*.tar)       tar xf $1      ;;
			*.tbz2)      tar xjf $1     ;;
			*.tgz)       tar xzf $1     ;;
			*.zip)       unzip $1       ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1        ;;
			*)     echo "'$1' cannot be extracted via extract()" ;;
		esac
	else
		echo "'$1' is not a valid file"
	fi
}

transfer() {
	if [ -z "$1" ]; then
		echo "\`transfer\` helps you upload files on https://transfer.sh";
		echo "Usage: transfer file_to_upload";
		return 1
	fi
	curl --upload-file ./$1 https://transfer.sh/$1;
}

# needed for some build stuff looking for jsl instead of jslint
alias jsl="jslint"
alias teensy_loader_cli="teensy-loader-cli"
